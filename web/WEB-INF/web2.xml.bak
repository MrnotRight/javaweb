<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <!-- 配置当前WEB应用的初始化参数 -->
  <context-param>
  	<param-name>driver</param-name>
  	<param-value>cn.edu.swu.Driver</param-value>
  </context-param>
  <context-param>
  	<param-name>DriverUrl</param-name>
  	<param-value>jdbc:mysql:///cn.edu.swu</param-value>
  </context-param>
  
  <!-- 配置servlet -->
  <servlet>
  	<servlet-name>helloservlet</servlet-name>
  	<servlet-class>cn.edu.swu.HelloServlet</servlet-class>
  	<!-- 初始化参数 -->
  	<init-param>
  		<param-name>user</param-name>
  		<param-value>root</param-value>
  	</init-param>
  	<init-param>
  		<param-name>password</param-name>
  		<param-value>1234</param-value>
  	</init-param>
  	<load-on-startup>-1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>helloservlet</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>loginServlet</servlet-name>
  	<servlet-class>cn.edu.swu.LoginServlet</servlet-class>
  	<init-param>
  		<param-name>user</param-name>
  		<param-value>root</param-value>
  	</init-param>
  	<init-param>
  		<param-name>password</param-name>
  		<param-value>1234</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>loginServlet</servlet-name>
  	<url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
</web-app>